@model TalentosIT.Models.PerfilTalento

<h2>Criar Talento</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Nome">Nome</label>
        <input asp-for="Nome" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Pais">País</label>
        <input asp-for="Pais" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PrecoHora">Preço/Hora</label>
        <input asp-for="PrecoHora" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Tipo">Tipo</label>
        <input asp-for="Tipo" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success mt-3">Salvar</button>
    <a href="@Url.Action("Index", "PerfilTalento")" class="btn btn-secondary mt-3">Cancelar</a>
</form>

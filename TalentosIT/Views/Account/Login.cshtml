@{
    ViewData["Title"] = "Login";
}

<div class="login-page">
    <div class="login-container text-white">
        <h2 class="text-center mb-4">Entrar com conta</h2>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger bg-white text-danger">@ViewBag.Error</div>
        }

        <form method="post" asp-controller="Account" asp-action="Login">
            <div class="mb-3">
                <label class="form-label">Email</label>
                <input type="email" name="email" class="form-control custom-input" placeholder="Introduza o seu email" required>
            </div>
            <div class="mb-3">
                <label class="form-label">Password</label>
                <input type="password" name="password" class="form-control custom-input" placeholder="Introduza a sua Password" required>
            </div>

            <button type="submit" class="btn btn-light w-100 custom-btn-text mt-4">Entrar</button>
            <p class="text-center mt-3 text-white">
                Não tem conta? <a href="/Account/Register" class="text-white text-decoration-underline">Registe-se aqui</a>
            </p>
        </form>
    </div>
</div>

<style>
.login-page {
    width: 100vw;
    height: 100vh;
    background-color: white;
    display: flex;
    justify-content: center;
    align-items: center;
}

.login-container {
    max-width: 400px;
    width: 100%;
    background: linear-gradient(135deg, #007bff, #6f42c1);
    padding: 30px;
    border-radius: 12px;
    box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);
}

.custom-input,
.custom-btn-text {
    background-color: white !important;
    color: black !important;
    font-weight: 400 !important;
    border: none;
    outline: none;
}

.custom-input::placeholder {
    color: grey !important;
    font-weight: 400 !important;
}

.custom-input:focus {
    border: 2px solid #ffffff;
    box-shadow: 0 0 5px rgba(255, 255, 255, 0.5);
}
</style>
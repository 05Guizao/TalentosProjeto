@{
    ViewData["Title"] = "Login";
}

<div class="login-container">
    <h2 class="text-center">Login</h2>
    <form>
        <div class="mb-3">
            <label class="form-label">Email</label>
            <input type="email" class="form-control" placeholder="Digite seu email" required>
        </div>
        <div class="mb-3">
            <label class="form-label">Password</label>
            <input type="password" class="form-control" placeholder="Digite sua senha" required>
        </div>
        <button type="submit" class="btn btn-primary w-100">Entrar</button>
        <p class="text-center mt-3">
            Não tem conta? <a href="/Account/Register">Registe-se aqui</a>
        </p>
    </form>
</div>

<style>
    .login-container {
        max-width: 400px;
        margin: auto;
        margin-top: 50px;
        padding: 20px;
        background: white;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }
</style>
@model TalentosIT.Models.Utilizador

@{
    ViewData["Title"] = "Registo";
}

<div class="register-page">
    <div class="register-container text-white">
        <h2 class="text-center">Criar Conta</h2>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger bg-white text-danger text-center">@ViewBag.Error</div>
        }

        <form asp-controller="Account" asp-action="Register" method="post">
            <div class="mb-3">
                <label asp-for="Tipo" class="form-label">Tipo de Conta</label>
                <select asp-for="Tipo" class="form-control custom-input">
                    <option value="">-- Selecione o tipo de conta --</option>
                    <option value="Cliente">Cliente</option>
                    <option value="Empresa">Empresa</option>
                    <option value="Admin">Admin</option>
                </select>
                <span asp-validation-for="Tipo" class="text-light"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Nome</label>
                <input asp-for="Nome" class="form-control custom-input" placeholder="Introduza o seu nome" />
                <span asp-validation-for="Nome" class="text-light"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Email</label>
                <input asp-for="Email" class="form-control custom-input" placeholder="Introduza o seu email" />
                <span asp-validation-for="Email" class="text-light"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control custom-input" placeholder="Introduza uma password" />
                <span asp-validation-for="Password" class="text-light"></span>
            </div>

            <button type="submit" class="btn btn-light w-100 custom-btn-text">Criar Conta</button>

            <p class="text-center mt-3 text-white">
                Já tem conta? <a href="/Account/Login" class="text-white text-decoration-underline">Faça login aqui</a>
            </p>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
.register-page {
    width: 100vw;
    height: 100vh;
    background-color: white;
    display: flex;
    justify-content: center;
    align-items: center;
}

.register-container {
    max-width: 400px;
    width: 100%;
    background: linear-gradient(135deg, #007bff, #6f42c1);
    padding: 30px;
    border-radius: 12px;
    box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);
}

.custom-input,
.custom-btn-text {
    background-color: white !important;
    color: black !important;
    font-weight: 400 !important;
    border: none;
    outline: none;
}

.custom-input::placeholder {
    color: black !important;
    font-weight: 400 !important;
}

.custom-input:focus {
    border: 2px solid #ffffff;
    box-shadow: 0 0 5px rgba(255, 255, 255, 0.5);
}
</style>

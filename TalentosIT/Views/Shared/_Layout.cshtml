<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TalentosIT</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <style>
        body {
            background-color: #f8f9fa;
        }
        .navbar {
            background: linear-gradient(to right, #007bff, #6610f2);
            padding: 15px;
        }
        .navbar-brand, .nav-link {
            color: white !important;
            font-weight: bold;
        }
        .nav-link:hover {
            color: #f8f9fa !important;
            text-decoration: underline;
        }
        .auth-buttons .btn {
            border-radius: 20px;
            padding: 6px 15px;
            font-weight: bold;
            margin-left: 10px;
        }
        .btn-login {
            background-color: white;
            color: #007bff;
            border: 2px solid white;
        }
        .btn-login:hover {
            background-color: #e0e0e0;
            color: #0056b3;
        }
        .btn-register {
            background-color: #ffffff;
            color: #6610f2;
            border: 2px solid white;
        }
        .btn-register:hover {
            background-color: #e0e0e0;
            color: #4a0db3;
        }
        .container {
            margin-top: 20px;
        }
        footer {
            margin-top: 20px;
            padding: 15px;
            background-color: #343a40;
            color: white;
            text-align: center;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">TalentosIT</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Privacy">Privacy</a></li>
                    </ul>
                    <div class="auth-buttons">
                        <a href="/Account/Login" class="btn btn-login">Login</a>
                        <a href="/Account/Register" class="btn btn-register">Registo</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="container">
        @RenderBody()
    </main>

    <footer>
        <p>&copy; 2025 - TalentosIT - <a href="/Privacy" class="text-white">Privacy</a></p>
    </footer>
</body>
</html>

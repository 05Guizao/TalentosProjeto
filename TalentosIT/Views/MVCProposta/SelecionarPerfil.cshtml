@using System.Linq

<table class="table table-hover">
    <thead>
    <tr>
        <th>Perfil</th>
        <th>País</th>
        <th>Email</th>
        <th>Ações</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var perfil in Model)
    {
        var talentoSkills = perfil.TalentoSkills as IEnumerable<TalentosIT.Models.TalentoSkill>;

        <tr>
            <td>
                <strong>@perfil.Nome</strong><br />

                <small><i>Skills:</i>
                    @if (talentoSkills != null && talentoSkills.Any())
                    {
                        foreach (var ts in talentoSkills)
                        {
                            <span class="badge bg-secondary me-1">@ts.Skill?.Nome</span>
                        }
                    }
                    else
                    {
                        <span class="text-muted">Sem skills</span>
                    }
                </small>
            </td>
            <td>@perfil.Pais</td>
            <td>@perfil.Email</td>
            <td>
                <a class="btn btn-primary btn-sm" asp-action="Create" asp-route-perfilId="@perfil.Cod">Criar Proposta</a>
            </td>
        </tr>
    }
    </tbody>
</table>

@model TalentosIT.Models.PropostaTrabalho

@{
    ViewData["Title"] = "Criar Proposta";
    Layout = "~/Views/Shared/LayoutEmpresa.cshtml";
}

<h2>Criar Proposta</h2>

<form asp-action="Create" asp-route-perfilId="@ViewBag.PerfilId" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label asp-for="Nome" class="form-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CategoriaTalento" class="form-label"></label>
        <input asp-for="CategoriaTalento" class="form-control" />
        <span asp-validation-for="CategoriaTalento" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="NumTotalHoras" class="form-label"></label>
        <input asp-for="NumTotalHoras" type="number" class="form-control" />
        <span asp-validation-for="NumTotalHoras" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DescricaoTrabalho" class="form-label"></label>
        <textarea asp-for="DescricaoTrabalho" class="form-control"></textarea>
        <span asp-validation-for="DescricaoTrabalho" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submeter Proposta</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@model TalentosIT.Models.PropostaTrabalho

@{
    ViewData["Title"] = "Criar Proposta";
    Layout = "~/Views/Shared/LayoutEmpresa.cshtml";
}

<h2>Criar Proposta de Trabalho</h2>

<form asp-action="Create" method="post">
    @* Campo hidden para associar o perfil selecionado à proposta *@
    <input type="hidden" name="perfilId" value="@Context.Request.Query["perfilId"]" />

    <div class="form-group">
        <label asp-for="Nome">Nome</label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CategoriaTalento">Categoria do Talento</label>
        <input asp-for="CategoriaTalento" class="form-control" />
        <span asp-validation-for="CategoriaTalento" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NumTotalHoras">Total de Horas</label>
        <input asp-for="NumTotalHoras" class="form-control" />
        <span asp-validation-for="NumTotalHoras" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DescricaoTrabalho">Descrição</label>
        <textarea asp-for="DescricaoTrabalho" class="form-control"></textarea>
        <span asp-validation-for="DescricaoTrabalho" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Estado">Estado</label>
        <input asp-for="Estado" class="form-control" />
        <span asp-validation-for="Estado" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success mt-3">Salvar</button>
    <a href="@Url.Action("Index", "MVCProposta")" class="btn btn-secondary mt-3">Cancelar</a>
</form>

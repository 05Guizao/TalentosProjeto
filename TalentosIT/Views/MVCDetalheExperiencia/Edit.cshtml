@model TalentosIT.Models.DetalheExperiencia
@{
    Layout = "~/Views/Shared/Layout3.cshtml";
    ViewData["Title"] = "Editar Experiência";
}

<h2>Editar Experiência</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Cod" />

    <div class="mb-3">
        <label asp-for="Titulo" class="form-label"></label>
        <input asp-for="Titulo" class="form-control" />
        <span asp-validation-for="Titulo" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="NomeEmpresa" class="form-label"></label>
        <input asp-for="NomeEmpresa" class="form-control" />
        <span asp-validation-for="NomeEmpresa" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="AnoComeco" class="form-label"></label>
        <input asp-for="AnoComeco" class="form-control" />
        <span asp-validation-for="AnoComeco" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="AnoTermino" class="form-label"></label>
        <input asp-for="AnoTermino" class="form-control" />
        <span asp-validation-for="AnoTermino" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar Alterações</button>
</form>
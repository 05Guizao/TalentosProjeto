@model TalentosIT.Models.DetalheExperiencia
@{
    Layout = "~/Views/Shared/LayoutCliente.cshtml";
    ViewData["Title"] = "Adicionar Experiência";
}

<h2>Adicionar Experiência</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        Por favor, corrija os erros no formulário.
    </div>
}

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Titulo" class="form-label"></label>
        <input asp-for="Titulo" class="form-control" />
        <span asp-validation-for="Titulo" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="NomeEmpresa" class="form-label"></label>
        <input asp-for="NomeEmpresa" class="form-control" />
        <span asp-validation-for="NomeEmpresa" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="AnoComeco" class="form-label"></label>
        <input asp-for="AnoComeco" class="form-control" />
        <span asp-validation-for="AnoComeco" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="AnoTermino" class="form-label"></label>
        <input asp-for="AnoTermino" class="form-control" />
        <span asp-validation-for="AnoTermino" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
</form>


@model TalentosIT.Models.TalentoSkill
@{
    ViewData["Title"] = "Associar Nova Skill";
    Layout = "~/Views/Shared/LayoutCliente.cshtml";
}

<h2>Associar Nova Skill</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="CodSkill">Skill</label>
        <select class="form-control" id="CodSkill" name="CodSkill" required>
            <option value="">-- Seleciona uma skill --</option>
            @foreach (var skill in ViewBag.Skills)
            {
                <option value="@skill.Cod">@skill.Nome</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="AreaProfissional">Área Profissional</label>
        <input type="text" class="form-control" id="AreaProfissional" name="AreaProfissional" required placeholder="Ex: Desenvolvimento Web, Redes, etc." />
    </div>

    <div class="form-group">
        <label for="AnosDeExperiencia">Anos de Experiência</label>
        <input type="number" class="form-control" id="AnosDeExperiencia" name="AnosDeExperiencia" min="0" required />
    </div>

    <div class="form-group">
        <label for="NivelConforto">Nível de Conforto</label>
        <select class="form-control" id="NivelConforto" name="NivelConforto" required>
            <option value="">-- Seleciona --</option>
            <option value="Baixo">Baixo</option>
            <option value="Médio">Médio</option>
            <option value="Elevado">Elevado</option>
        </select>
    </div>

    <div class="form-group">
        <label for="DescricaoProjetos">Projetos Relacionados (opcional)</label>
        <textarea class="form-control" id="DescricaoProjetos" name="DescricaoProjetos" rows="3"></textarea>
    </div>

    <button type="submit" class="btn btn-success mt-3">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancelar</a>
</form>
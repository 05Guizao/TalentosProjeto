    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 20px;
}

.hero-text h1 {
    font-size: 3.5rem;
    font-weight: 800;
}

.lead {
    font-size: 1.5rem;
    margin-top: 1rem;
}

.gradient-text {
    background: linear-gradient(135deg, #007bff, #6f42c1);

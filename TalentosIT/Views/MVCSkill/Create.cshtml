@model TalentosIT.Models.Skill

@{
    ViewData["Title"] = "Adicionar Skill";
    Layout = "~/Views/Shared/Layout3.cshtml"; // ou Layout2.cshtml se preferires
}

<h2 class="mt-4">@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="Nome" class="control-label">Nome</label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AreaProfissional" class="control-label">√Årea Profissional</label>
        <input asp-for="AreaProfissional" class="form-control" />
        <span asp-validation-for="AreaProfissional" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="Estado" value="Ativo" />

    <button type="submit" class="btn btn-success mt-3">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
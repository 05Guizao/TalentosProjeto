@model TalentosIT.Models.Skill

@{
    ViewData["Title"] = "Adicionar Skill";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<h2 class="mt-4">@ViewData["Title"]</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var kv in ViewData.ModelState)
            {
                foreach (var err in kv.Value.Errors)
                {
                    <li>@err.ErrorMessage</li>
                }
            }
        </ul>
    </div>
}

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AreaProfissional" class="control-label"></label>
        <input asp-for="AreaProfissional" class="form-control" />
        <span asp-validation-for="AreaProfissional" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="Estado" value="Ativo" />

    <button type="submit" class="btn btn-success mt-3">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

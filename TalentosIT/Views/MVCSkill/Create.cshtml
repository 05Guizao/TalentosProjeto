@model TalentosIT.Models.Skill

<h2>Criar Skill</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Nome">Nome</label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AreaProfissional">√Årea Profissional</label>
        <input asp-for="AreaProfissional" class="form-control" />
        <span asp-validation-for="AreaProfissional" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="Estado" value="Ativo" />

    <button type="submit" class="btn btn-success mt-3">Salvar</button>
    <a href="@Url.Action("Index", "MVCSkill")" class="btn btn-secondary mt-3">Cancelar</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

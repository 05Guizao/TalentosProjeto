@model IEnumerable<TalentosIT.Models.Skill>

@{
    ViewData["Title"] = "Skill";
    Layout = "~/Views/Shared/Layout3.cshtml";
    ViewData["HideAuthButtons"] = true;
}

<h2>Página de Skills</h2>
<p>Aqui podes gerir as skills disponíveis.</p>

<a asp-action="Create" class="btn btn-primary mb-3" style="background: linear-gradient(90deg, #007bff, #6610f2); color: white;">Criar Skill</a>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Nome</th>
        <th>Área Profissional</th>
        <th>Ações</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var skill in Model)
    {
        <tr>
            <td>@skill.Nome</td>
            <td>@skill.AreaProfissional</td>
            <td>
                <a asp-action="Edit" asp-route-id="@skill.Cod" class="btn btn-warning btn-sm">Editar</a>
                <form asp-action="Delete" asp-route-id="@skill.Cod" method="post" style="display:inline;">
                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Tens a certeza que queres apagar esta skill?');">Apagar</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
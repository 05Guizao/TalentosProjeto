@model TalentosIT.Models.Skill

@{
    ViewData["Title"] = "Adicionar Skill";
    Layout = "~/Views/Shared/Layout3.cshtml";
}

<h2>Editar Skill</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Cod" />
    
    <div class="form-group">
        <label asp-for="Nome">Nome</label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AreaProfissional">Área Profissional</label>
        <input asp-for="AreaProfissional" class="form-control" />
        <span asp-validation-for="AreaProfissional" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="Estado" />

    <button type="submit" class="btn btn-success mt-3">Salvar</button>
    <a href="@Url.Action("Index", "MVCSkill")" class="btn btn-secondary mt-3">Cancelar</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}